def es_palindromo(palabra):
    #Convertimos la palabra a minúsculas y comparamos con su inversa
    return palabra.lower() == palabra.lower()[::-1]

#Nos imprime los resultados 
print(es_palindromo("Angel Manuel"))  
print(es_palindromo("Practica de palindromo"))   
print(es_palindromo("Me gusta mucho el arroz")) 
